<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/colorWhite">
    <LinearLayout
        android:layout_marginLeft="@dimen/d15"
        android:layout_marginTop="@dimen/d15"
        android:layout_marginRight="@dimen/d15"
        android:layout_marginBottom="@dimen/d15"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/d44"
        android:orientation="horizontal">

    <com.shuzhengit.zhixin.view.CircleImageView
        android:layout_width="@dimen/d30"
        android:layout_height="@dimen/d30"
        android:id="@+id/civAnswerUserIcon"
        android:src="@drawable/ic_normal_icon"/>
    <TextView
        android:layout_marginLeft="@dimen/d15"
        style="@style/text14spTextColorBlack"
        android:id="@+id/tvAnswerUserName"
        />
    </LinearLayout>
    <com.shuzhengit.zhixin.view.HtmlTextView
        android:id="@+id/htmlTextView"
        android:layout_marginRight="@dimen/d15"
        android:layout_marginLeft="@dimen/d15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvAnswerTime"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/d15"
        style="@style/text12spTextColorBlueGrey700"
        android:layout_marginBottom="@dimen/d15"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d15"
        android:background="@color/appBackgroundColor"/>
</LinearLayout>