<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey100"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/d200"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/test"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_transparent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvInfo"
            style="@style/text14spTextColorWhite"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/d15"
            android:layout_marginLeft="@dimen/d15"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/tvInfo"
            android:orientation="horizontal"
            android:id="@+id/llFollow"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <View
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_marginRight="@dimen/d3"
                android:background="@drawable/shape_follow_line"/>
            <TextView
                android:id="@+id/tvFollowCount"
                style="@style/text12spTextColorBlueGrey100"
                />
            <View
                android:layout_width="20dp"
                android:layout_marginLeft="@dimen/d3"
                android:layout_height="2dp"
                android:background="@drawable/shape_follow_line"/>

        </LinearLayout>

        <com.shuzhengit.zhixin.view.FollowTextView
            android:layout_width="@dimen/d70"
            android:layout_height="@dimen/d25"
            android:layout_below="@id/llFollow"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d15"
            android:gravity="center"
            android:id="@+id/tvFollow"
            app:isFollow="false"
            app:followBackground="@drawable/shape_wenba_unfollowed"
            app:unFollowBackground="@drawable/shape_wenba_followed"
            app:followedTextColor="@color/grey700"
            app:unFollowedTextColor="@color/colorWhite"
            app:followed="已关注"
            app:unFollowed="关注"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/d7"
        android:background="@drawable/selector_wenba_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/d20"
        android:layout_marginLeft="@dimen/d7"
        android:layout_marginRight="@dimen/d7"
        android:paddingBottom="@dimen/d15"
        android:paddingRight="@dimen/d20"
        android:paddingTop="@dimen/d15">

        <com.shuzhengit.zhixin.view.CircleImageView
            android:id="@+id/civAdmin"
            android:layout_width="@dimen/d35"
            android:layout_height="@dimen/d35"
            android:src="@drawable/ic_normal_icon"/>

        <TextView
            android:id="@+id/tvAdminName"
            style="@style/text12spTextColorBlueGrey700"
            android:layout_alignTop="@id/civAdmin"
            android:layout_marginLeft="@dimen/d15"
            android:layout_toRightOf="@id/civAdmin"
            />
        <TextView
            style="@style/text12spTextColorBlueGrey700"
            android:id="@+id/tvProfession"
            android:layout_toRightOf="@id/tvAdminName"
            android:layout_marginLeft="@dimen/d15"
            />
        <View
            android:layout_alignLeft="@id/tvAdminName"
            style="@style/dividerHorizontal"
            android:layout_marginTop="@dimen/d7"
            android:layout_below="@id/tvAdminName"
            />
        <TextView
            android:id="@+id/tvAdminInfo"
            style="@style/text14spTextColorBlueGrey700"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d70"
            android:layout_alignLeft="@id/tvAdminName"
            android:layout_below="@id/tvAdminName"
            android:layout_marginRight="@dimen/d15"
            android:layout_marginTop="@dimen/d15"
            android:gravity="left"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAdminInfo"
            android:layout_centerHorizontal="true"
            android:id="@+id/ivArrow"
            android:src="@drawable/ic_wenba_description_down"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/d15"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/d7"
        android:layout_marginLeft="@dimen/d7"
        android:paddingLeft="@dimen/d15"
        android:paddingRight="@dimen/d15"
        android:background="@drawable/shape_wenba_stroke"
        android:layout_height="@dimen/d30">

        <TextView
            android:id="@+id/tvAskCount"
            android:layout_centerVertical="true"
            style="@style/text12spTextColorBlueGrey700"
            android:text="@string/askCount"
            />
        <TextView
            android:layout_marginLeft="@dimen/d5"
            style="@style/text12spTextColorBlueGrey700"
            android:layout_toRightOf="@id/tvAskCount"
            android:layout_centerVertical="true"
            android:id="@+id/tvReplyCount"
            android:text="@string/comment"
            />

        <TextView
            android:layout_width="@dimen/d50"
            android:layout_height="@dimen/d20"
            android:gravity="center"
            android:textSize="@dimen/d12"
            android:text="最热"
            android:id="@+id/tvHot"
            android:textColor="@color/grey500"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tvNew"
            android:layout_width="@dimen/d50"
            android:layout_height="@dimen/d20"
            android:gravity="center"
            android:textSize="@dimen/d12"
            android:background="@drawable/shape_wenba_solid"
            android:layout_toLeftOf="@id/tvHot"
            android:textColor="@color/colorWhite"
            android:text="最新"/>
    </RelativeLayout>
</LinearLayout>
