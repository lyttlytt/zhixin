<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_item"
              android:orientation="vertical"
              android:padding="@dimen/d15">

    <TextView
        android:id="@+id/tvQuestionTitle"
        style="@style/text16spTextColorBlack"
        android:layout_width="match_parent"
        android:gravity="left"
        />

    <TextView
        android:id="@+id/tvAnswer"
        style="@style/text14spTextColorBlueGrey500"
        android:layout_marginTop="@dimen/d3"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:textColor="@color/grey700"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAgreeCount"
            style="@style/text12spTextColorBlueGrey500"
            android:textColor="@color/grey500"
            />

        <TextView
            android:id="@+id/tvReadCount"
            style="@style/text12spTextColorBlueGrey100"
            android:layout_marginLeft="@dimen/d5"
            android:textColor="@color/grey500"
            />
    </LinearLayout>
</LinearLayout>