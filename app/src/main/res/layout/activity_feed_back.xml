<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/d15"
        android:layout_marginLeft="@dimen/d15"
        android:layout_marginRight="@dimen/d15"
        android:layout_marginStart="@dimen/d15"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/d5"
        app:cardElevation="1dp"
        app:contentPadding="@dimen/d15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/d175"
                android:background="@null"
                android:gravity="left|top"
                android:hint="赶紧吐槽吧~"
                android:id="@+id/etFeedBack"
                android:letterSpacing="0.1"
                android:textColor="@color/grey700"
                android:textSize="14sp"/>

            <Button
                android:layout_width="@dimen/d70"
                android:layout_height="@dimen/d35"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/d5"
                android:layout_marginTop="@dimen/d15"
                android:background="@drawable/shape_btn_login"
                android:text="喷死你"
                android:onClick="sendFeedBack"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>