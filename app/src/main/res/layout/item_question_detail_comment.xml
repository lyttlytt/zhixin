<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical"
              android:padding="@dimen/d15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d33">

        <com.shuzhengit.zhixin.view.CircleImageView
            android:id="@+id/civUserAvatar"
            android:layout_width="@dimen/d33"
            android:layout_height="@dimen/d33"
            android:src="@drawable/ic_normal_icon"/>

        <TextView
            style="@style/text14spTextColorBlueGrey700"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d15"
            android:layout_toRightOf="@+id/civUserAvatar"
            android:id="@+id/tvReplyUserName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_unlike"
            android:drawablePadding="@dimen/d3"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:id="@+id/tvAgreeCount"
            />
        <TextView
            android:id="@+id/tvAddOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/d3"
            android:gravity="center"
            android:text="+1"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:visibility="gone"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvAnswer"
        style="@style/text14spTextColorBlueGrey700"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/d15"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="4"
        />
    <ImageView
        android:layout_marginTop="@dimen/d7"
        android:layout_width="@dimen/d120"
        android:layout_height="@dimen/d80"
        android:id="@+id/img"
        android:scaleType="centerCrop"
        />

