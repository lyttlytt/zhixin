<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/d15">

        <TextView
            android:id="@+id/tvQuestionTitle"
            style="@style/text16spTextColorBlueGrey700"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            android:textColor="@color/grey1000"
            />

        <LinearLayout
            android:id="@+id/llBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d66"
            android:layout_below="@id/tvQuestionTitle"
            android:layout_marginTop="@dimen/d7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBanner1"
                android:layout_width="@dimen/d100"
                android:layout_height="@dimen/d66"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@color/blue600"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/ivBanner2"
                android:layout_width="@dimen/d100"
                android:layout_height="@dimen/d66"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/d15"
                android:layout_weight="1"
                android:background="@color/blue600"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/ivBanner3"
                android:layout_width="@dimen/d100"
                android:layout_height="@dimen/d66"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/d15"
                android:layout_weight="1"
                android:background="@color/blue600"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvAnswerCount"
            style="@style/text12spTextColorPrimary"
            android:layout_below="@id/llBanner"
            android:layout_marginTop="@dimen/d7"
            android:text="@string/questionAnswerCount"
            android:textColor="@color/grey600"/>
    </RelativeLayout>

    <View
        style="@style/dividerHorizontal"
        />
</LinearLayout>